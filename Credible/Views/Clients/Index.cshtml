@model IEnumerable<Credible.ViewModels.Clients>

@{
    ViewBag.Title = "Clients";
}

<h2>Client Information</h2>

<table id="clients" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Clients</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#clients").DataTable({
                ajax: {
                    url: "/api/client/clients",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, client) {
                            return "<a href='/courses/index/" + client.id + "'>" + client.name + "</a>";
                        }
                    }
                  
                ]
            });


         
        });
    </script>
}